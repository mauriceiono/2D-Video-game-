.assistanttextfield__element {
    flex-grow: 1;
}

.assistanttextfield__element-root {
    flex-grow: 1;
}

.mui-mtf-root {
    flex-grow: 1;
    min-height: 42px;
    border-width: 1px;
    border-radius: 6px;
    border-color: var(--muse-chat-backgrounds-50);
    background-color: var(--muse-chat-backgrounds-100);
    cursor: text;
    justify-content: center;
    padding-left: 0;
}

.mui-mtf-root:hover {
    border-color: var(--muse-chat-primary-500);
}

.mui-mtf-root.mui-mft-input-focused {
    border-color: var(--muse-chat-accent-50);
}

.mui-mtf-placeholder-root {
    flex-direction: row;
    align-items: center;
    margin-left: 6px;
    cursor: text;
    position: absolute;
    top: 4px;
}

#placeholderText {
    color: var(--muse-chat-foregrounds-25);
}

.mui-mtf-muse-icon {
    width: 16px;
    height: 16px;
    margin-right: 8px;
}

.mui-mtf-shortcut-button-icon,
.mui-mtf-attach-button-icon {
    width: 16px;
    height: 16px;
    margin-right: 2px;
}

.mui-mtf-scroll-view {
    flex-grow: 0;
    min-height: 32px;
    max-height: 160px;
    align-self: flex-start;
    justify-content: center;
    align-items: center;
    margin-left: 0;
    margin-top: 0;
    margin-bottom: 0;
}

.mui-mtf-scroll-view .unity-scroll-view__content-container {
    flex-grow: 1;
    flex-shrink: 0;
}

#input {
    flex-shrink: 0;
    flex-grow: 1;
    white-space: normal;
    margin-right: 2px;
    margin-left: 2px;
    margin-bottom: 0;
}

#placeholderText {
    color: var(--muse-chat-text-secondary);
}

#characterCount {
    position: absolute;
    bottom: -16px;
    right: 0;
    display: none;
}

#actionButton.mui-mft-input-hovered {
    background-color: var(--muse-chat-backgrounds-100);
}

#actionButton.mui-mft-input-focused {
    background-color: var(--muse-chat-accent-50);
}

.mui-mft-input-focused {
    --unity-image-tint-color: white;
}

.mui-mtf-submit-button-icon {
    align-self: center;
    height: 12px;
    width: 12px;
}

.mui-actions-row {
    cursor: text;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    padding-top: 6px;
    margin: 0 0 6px 6px;
}

.mui-submit-button {
    justify-content: center;
    align-items: center;
    opacity: 0.4;
    min-width: 20px;
    height: 20px;
    border-radius: 3px;
    padding: 3px 4px;
    margin-left: 0;
    margin-bottom: 0;
    margin-right: 8px;
    border-width: 0;
    margin-top: 0;
}

.mui-left-actions {
    display: flex;
    flex-direction: row;
}

.mui-right-actions {
    flex-direction: row;
}

.mui-mtf-input-root {
    display: flex;
    flex-grow: 1;
    flex-shrink: 0;
    flex-direction: column;
    margin-top: 4px;
}

#unity-text-input {
    border-width: 0;
    align-self: stretch;
}

.mui-mtf-input-root .unity-base-text-field__input {
    background-color: var(--muse-chat-backgrounds-100);
}

.mui-submit-enabled {
    opacity: 1;
}

.mui-icon-arrow-small {
    height: 14px;
    width: 14px;
}

#command-input {
    color: var(--muse-chat-accent-50);
    -unity-font-style: bold;
}

.mui-mtf-action-button-label {
    margin-left: 2px;
    padding-right: 4px;
}

#addContextButton {
    margin-left: 0;
}

.mui-mtf-context-warning {
    width: 20px;
    height: 20px;
    margin-right: 4px;
    align-items: center;
    background-color: var(--muse-chat-warning-background-color);
    border-width: 1px;
    border-radius: 3px;
}

#actionButtonImage {
    margin-right: 2px;
}

#textFieldPointCostDisplayElement {
    background-color: var(--muse-chat-backgrounds-200);
    border-color: var(--muse-chat-backgrounds-200);
    height: 14px;
    width: 14px;
    font-size: var(--muse-chat-small-font-size);
}

.mui-mtf-warning-area {
    height: 20px;
}

#contextLimitWarning .mui-context-limit-warning-icon {
    height: 16px;
    width: 16px;
    margin-right: 1px;
}

.mui-point-cost-display-element {
    margin-left: 2px;
}
