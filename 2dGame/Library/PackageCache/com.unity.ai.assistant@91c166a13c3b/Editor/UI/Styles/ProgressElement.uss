.progresselement__element {
    flex-shrink: 0;
    flex-grow: 1;
}

.progresselement__element-root {
    flex-grow: 1;
    align-items: stretch;
}

.mui-progress-root {
    flex-grow: 1;
    padding: 6px 12px 12px 12px;
}

.mui-progress-text {
    margin-left: 0;
    margin-right: 4px;
    margin-top: 2px;
    -unity-font-style: bold;
    align-self: flex-start;
}

.mui-progress-bar {
    margin-top: 12px;
    margin-left: 0;
    margin-right: 0;
    flex-grow: 1;
    border-radius: 6px;
    align-self: center;
}

.mui-progress-bar .unity-progress-bar__container {
    height: 10px;
    min-height: 10px;
    max-height: 10px;
}

.mui-progress-bar .unity-progress-bar__background {
    background-color: var(--muse-chat-backgrounds-100);
    border-radius: 4px;
    border-width: 1px;
    border-color: var(--muse-chat-backgrounds-50);
}

.mui-progress-bar .unity-progress-bar__progress {
    background-color: var(--muse-chat-accent-50);
    border-radius: 2px;
    border-width: 1px;
    margin: 0;
    background-image: url('project://database/Packages/com.unity.ai.assistant/Editor/UI/Assets/Slider.png');
    background-position-x: left 0;
    background-repeat: repeat;
    background-size: cover;
}

.mui-progress-label-root {
    flex-direction: row;
    flex-grow: 1;
}

.mui-progress-bar-root {
    flex-direction: row;
    flex-grow: 1;
    align-items: center;
}
