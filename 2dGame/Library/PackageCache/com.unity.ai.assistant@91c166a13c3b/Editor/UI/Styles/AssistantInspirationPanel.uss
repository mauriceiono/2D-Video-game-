.assistantinspirationpanel__element {
    flex-grow: 1;
}

.assistantinspirationpanel__element-root {
    flex-grow: 1;
}

.mui-chat-inspiration-panel {
    flex-grow: 1;
    justify-content: center;
}

.mui-chat-empty-top-buttons {
    position: absolute;
    top: 8px;
    left: 8px;
    right: 8px;
    flex-direction: row;
    align-items: center;
    justify-content: center;
}

.mui-chat-disclaimer {
    display: flex;
    justify-content: center;
    align-items: center;
    -unity-text-align: middle-center;
    align-self: center;
    max-width: 410px;
}

.mui-chat-inspiration-text {
    color: var(--muse-chat-text-secondary);
    align-self: center;
    -unity-text-align: middle-center;
    -unity-font-style: bold;
}

.mui-chat-disclaimer-text {
    white-space: normal;
    max-width: 280px;
    font-size: var(--muse-chat-small-font-size);
    color: var(--muse-chat-text-secondary-on-background-50);
}

#museChatInspirationDisclaimer {
    -unity-text-align: middle-center;
}

.mui-chat-inspiration-refresh-btn {
    background-color: rgba(0, 0, 0, 0);
    border-width: 0;
    padding: 6px;
}

.mui-chat-inspiration-main-content {
    align-self: flex-start;
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    flex-shrink: 1;
}

.mui-chat-inspiration-content-root {
    flex-direction: row;
    align-items: center;
}

.mui-chat-inspiration-content {
    flex-grow: 0;
}

#refreshButton:hover {
    background-color: var(--muse-chat-backgrounds-200);
}

.mui-chat-inspiration-section-header {
    flex-direction: row;
    margin-bottom: 8px;
}

.mui-chat-inspiration-section {
    margin: 12px;
}

.mui-chat-inspiration-section-header-icon {
    width: 16px;
    height: 16px;
    margin-right: 4px;
}

.mui-chat-inspiration-section-header-label {
    font-size: var(--muse-chat-header-font-size);
    color: var(--muse-chat-disclaimer-text);
}

.mui-chat-inspiration-spacer {
    flex-grow: 1;
}

#museChatWhatsNewButton {
    background-color: rgba(0,0,0,0);
    min-height: 24px;
}

#museChatWhatsNewButton:hover {
    background-color: var(--muse-chat-backgrounds-200);
}
